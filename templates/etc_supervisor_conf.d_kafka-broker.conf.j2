[program:kafka-broker]
#command=env JMX_PORT={{kafka_server_JMX_PORT}} /{{ kafka_local_dir }}/bin/kafka-server-start.sh /{{ kafka_local_dir }}/config/server.properties
command={{ kafka_local_dir }}/bin/kafka-server-start.sh -daemon {{ kafka_local_dir }}/config/server.properties
user={{kafka_user}}
autostart=true
autorestart=true
stopasgroup=true
startsecs=30
startretries=10
log_stdout=true
log_stderr=true
logfile=/var/log/kafka/broker.out
logfile_maxbytes=20MB
logfile_backups=10
