[program:kafka-broker]
command={{ kafka_local_dir }}/bin/kafka-server-start.sh {{ kafka_cfg_dir }}/server.properties
user={{kafka_user}}
autostart=true
autorestart=true
stopasgroup=true
startsecs=30
startretries=10
log_stdout=true
log_stderr=true
stdout_logfile={{ kafka_log_dir }}/kafka-stdout.log
stdout_logfile_maxbytes=20MB
stdout_logfile_backups=1
stdout_capture_maxbytes=0
stdout_events_enabled=false
stderr_logfile={{ kafka_log_dir }}/kafka-stderr.log
stderr_logfile_maxbytes=20MB
stderr_logfile_backups=1
stderr_capture_maxbytes=0
stderr_events_enabled=false
